generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          String   @id @default(uuid())
  site_id     String
  event_type  String
  path        String
  user_id     String
  timestamp   DateTime
  inserted_at DateTime @default(now())

  @@index([site_id, event_type, timestamp])
}